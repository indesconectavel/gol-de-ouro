  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-spinner,
.processing-spinner {
  animation: spin 1s linear infinite;
}

/* ===== Escopo /game ===== */
body[data-page="game"] { 
  margin: 0; 
  padding: 0;
  overflow: hidden; 
  background: #000; /* Fundo preto para letterboxing */
  /* Prevenir refresh infinito */
  will-change: auto;
}

/* ===== VIEWPORT - Container que ocupa toda a tela ===== */
.game-viewport {
  position: fixed;
  inset: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000; /* Fundo preto para letterboxing */
  overflow: hidden;
  /* Prevenir refresh infinito */
  will-change: auto;
}

/* ===== GAME SCALE - Container que aplica transform: scale() ===== */
.game-scale {
  position: relative;
  /* Tamanho fixo do stage (1920x1080) */
  /* A escala será aplicada via transform: scale() no JS */
  /* transform-origin: center center garante que escala do centro */
  /* Prevenir refresh infinito - otimizações de performance */
  will-change: transform;
  backface-visibility: hidden;
  transform-style: preserve-3d;
  /* Prevenir reflow/repaint desnecessários */
  contain: layout style paint;
  /* Forçar aceleração por hardware */
  transform: translateZ(0);
}

/* ===== GAME STAGE - Stage fixo 1920x1080 ===== */
.game-stage {
  position: relative;
  width: 1920px;
  height: 1080px;
  overflow: hidden;
  background: #0b3a1d; /* Cor de fundo do campo */
  /* Todos os elementos dentro deste stage usam pixels fixos */
  /* Prevenir refresh infinito - otimizações de performance */
  will-change: auto;
  contain: strict; /* Isolamento completo do layout */
  /* Forçar aceleração por hardware */
  transform: translateZ(0);
  /* Prevenir reflow */
  isolation: isolate;
}

/* Variáveis CSS para cálculos proporcionais baseados no stage-root */
#stage-root{
  --pf-w: 100%; /* Largura do stage-root */
  --pf-h: 100%; /* Altura do stage-root */
  --pf-ratio: 16 / 9; /* Proporção fixa */
}


{
  "name": "goldeouro-backend",
  "version": "1.1.1",
  "description": "Backend do jogo Gol de Ouro - GO-LIVE v1.1.1",
  "main": "server-fly.js",
  "scripts": {
    "start": "node server-fly.js",
    "dev": "nodemon server.js",
    "test": "jest --testPathPattern=tests/unit --verbose",
    "test:e2e": "playwright test tests/e2e",
    "test:all": "npm run test && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "fix:memory": "node fix-memory-issue.js",
    "fix:database": "node fix-render-database.js",
    "server:original": "node server.js",
    "server:optimized": "node server-ultra-optimized.js",
    "server:render": "node server-render-fix.js",
    "keep-alive": "node keep-alive.js",
    "keep-alive:local": "NODE_ENV=local node keep-alive-advanced.js",
    "keep-alive:prod": "NODE_ENV=production node keep-alive-advanced.js",
    "keep-alive:test": "NODE_ENV=test node keep-alive-advanced.js",
    "keep-alive:simple": "node keep-alive.js",
    "keep-alive:advanced": "node keep-alive-advanced.js",
    "validate": "node validate-system.cjs",
    "rollback": "node rollback-to-approved.cjs",
    "status": "node -e \"console.log('Sistema Aprovado v1.1.1 - Admin Panel Funcionando Perfeitamente')\"",
    "prepare": "echo 'Skipping husky install in production'",
    "smoke:local": "powershell -ExecutionPolicy Bypass -File scripts/smoke-local.ps1",
    "test:contract": "node ./tests/run-contracts.js || echo 'use .http or supertest'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "build": "echo 'No build step required for Node.js backend'",
    "deploy": "npm run test:all && npm run lint && npm run audit && echo 'Deploy ready'",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:api": "jest --testPathPattern=tests/api",
    "test:security": "jest --testPathPattern=tests/security",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:security:auth": "jest --testPathPattern=tests/security/auth",
    "test:security:authz": "jest --testPathPattern=tests/security/authorization",
    "test:security:validation": "jest --testPathPattern=tests/security/validation",
    "test:load": "jest --testPathPattern=tests/performance/load",
    "test:stress": "jest --testPathPattern=tests/performance/stress",
    "test:coverage": "jest --coverage --testPathPattern=tests/unit"
  },
  "author": "Fred S. Silva",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.75.1",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "fs-extra": "^11.3.2",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "morgan": "^1.10.1",
    "ora": "^9.0.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.53.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "routes/**/*.js",
      "middlewares/**/*.js",
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/unit/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}

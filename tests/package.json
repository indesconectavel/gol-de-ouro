{
  "name": "gol-de-ouro-tests",
  "version": "1.0.0",
  "description": "Suite de Testes Automatizados - Gol de Ouro",
  "scripts": {
    "test": "node tests/automated-test-suite.js",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:e2e": "jest tests/e2e/",
    "test:performance": "node tests/performance-tests.js",
    "test:security": "node tests/security-tests.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "supertest-as-promised": "^4.0.2",
    "@types/jest": "^29.5.8",
    "jest-environment-node": "^29.7.0",
    "artillery": "^2.0.0",
    "k6": "^0.0.0",
    "newman": "^6.0.0",
    "newman-reporter-html": "^1.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "services/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000
  }
}

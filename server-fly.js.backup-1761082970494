          updated_at: new Date().toISOString()
        });
      
      if (error) {
        console.error('‚ùå [METRICS] Erro ao salvar contador:', error);
      }
    } catch (error) {
      console.error('‚ùå [METRICS] Erro:', error);
    }
  }
}

